<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- 标题 -->
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="欢迎登录"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"/>

    <!-- 子标题 -->
    <TextView
        android:id="@+id/tv_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请登录您的账户"
        android:textSize="16sp"
        android:textColor="#666666"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"/>

    <!-- 邮箱输入框 -->
    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="请输入邮箱"
        android:inputType="textEmailAddress"
        android:background="@drawable/shape_edittext_bg"
        android:paddingStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
        android:layout_marginTop="40dp"/>

    <!-- 密码输入框 -->
    <EditText
        android:id="@+id/et_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:hint="请输入密码"
        android:inputType="textPassword"
        android:background="@drawable/shape_edittext_bg"
        android:paddingStart="15dp"
        app:layout_constraintTop_toBottomOf="@id/et_email"
        android:layout_marginTop="15dp"/>

    <!-- 忘记密码 -->
    <TextView
        android:id="@+id/tv_forget_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码？"
        android:textSize="14sp"
        android:textColor="#2196F3"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        app:layout_constraintEnd_toEndOf="@id/et_password"
        android:layout_marginTop="8dp"
        android:clickable="true"/>

    <!-- 登录按钮 -->
    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="登录"
        android:textColor="#FFFFFF"
        android:background="@drawable/shape_btn_login"
        app:layout_constraintTop_toBottomOf="@id/tv_forget_pwd"
        android:layout_marginTop="25dp"/>

    <!-- 分割线 -->
    <TextView
        android:id="@+id/tv_divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="或者"
        android:textSize="14sp"
        android:textColor="#999999"
        app:layout_constraintTop_toBottomOf="@id/btn_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"/>

    <!-- 微信登录按钮 -->
    <Button
        android:id="@+id/btn_wechat_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="微信登录"
        android:textColor="#FFFFFF"
        android:background="@drawable/shape_btn_wechat"
        android:drawableLeft="@drawable/wechat_login"
        android:drawablePadding="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_divider"
        android:layout_marginTop="20dp"/>

    <!-- Apple登录按钮 -->
    <Button
        android:id="@+id/btn_apple_login"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="Apple登录"
        android:textColor="#000000"
        android:background="@drawable/shape_btn_apple"
        android:drawableLeft="@drawable/apple_login"
        android:drawablePadding="10dp"
        app:layout_constraintTop_toBottomOf="@id/btn_wechat_login"
        android:layout_marginTop="15dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>